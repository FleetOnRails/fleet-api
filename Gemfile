source 'https://rubygems.org'

gem 'rails', '3.2.13'

gem 'sqlite3'

# Gems used only for assets and not required
# in production environments by default.
group :assets do
  gem 'sass-rails',   '~> 3.2.3'
  gem 'coffee-rails', '~> 3.2.1'
  gem 'uglifier', '>= 1.0.3'
end

# Installed Gems
gem 'capistrano'
gem 'unicorn'
gem 'rabl'
gem 'carrierwave'
gem 'apipie-rails'

group :development, :test do
  gem 'rspec-rails', '~> 2.0'
  gem 'better_errors'
  gem 'binding_of_caller'
  gem 'meta_request'
  gem 'debugger'
end
