<div class="row">
  <div class="col-md-3" id="leftCol">
    <div class="panel panel-default">
      <div class="panel-heading">
        <h3 class="panel-title">Resources</h3>
      </div>
      <ul class="nav nav-stacked" id="sidebar">
        <li><%= link_to 'Readme', :controller => 'api_docs', :action => 'index', :category => 'readme' %></li>
        <li><%= link_to 'OAuth', :controller => 'api_docs', :action => 'index', :category => 'oauth' %></li>
